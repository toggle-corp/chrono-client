{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
        "#components/*": ["./src/components/*"],
        "#config/*": ["./src/config/*"],
        "#hooks/*": ["./src/hooks/*"],
        "#resources/*": ["./src/resources/*"],
        "#types": ["./src/types"],
        "#types/*": ["./src/types/*"],
        "#utils/*": ["./src/utils/*"],
        "#views/*": ["./src/views/*"]
    }
  },
  "include": [
    "src"
  ]
}
